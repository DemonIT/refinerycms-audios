<% audio ||= nil
   audio_width ||= 0 #Refinery::Audios.audio_default_width.to_i
   include_javascript ||= false
%>

<%= javascript_include_tag 'refinery-audios' if include_javascript  %>
<% if audio %>
    <!--audio tag began-->
    <audio id="show_audio_<%= audio.id %>" class="audio-js ajs-default-skin" preload="metadata" src="<%= audio.download_url %>" controls="controls">
    </audio>
    <!--audio tag ended-->
<% end %>

